# OpenSearch Configuration for Docker local instance
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# Cookie Authentication (alternative to username/password)
OPENSEARCH_USE_COOKIES=false
OPENSEARCH_COOKIES=
OPENSEARCH_COOKIE_FILE=
OPENSEARCH_AUTH_HEADERS=

# For production or secured OpenSearch clusters with basic auth:
# OPENSEARCH_HOST=your-production-host
# OPENSEARCH_USERNAME=your-username
# OPENSEARCH_PASSWORD=your-password
# OPENSEARCH_USE_SSL=true
# OPENSEARCH_VERIFY_CERTS=true

# For production with cookie authentication:
# OPENSEARCH_HOST=your-production-host
# OPENSEARCH_USE_SSL=true
# OPENSEARCH_VERIFY_CERTS=true
# OPENSEARCH_USE_COOKIES=true
# OPENSEARCH_COOKIES=sessionid=abc123; csrftoken=xyz789
# OPENSEARCH_AUTH_HEADERS=X-Forwarded-User: username, Authorization: Bearer token123

# For cookie file (exported from browser):
# OPENSEARCH_COOKIE_FILE=/path/to/cookies.txt